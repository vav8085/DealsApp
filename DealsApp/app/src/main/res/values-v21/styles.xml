    <resources>
    <style name="AppTheme" parent="@android:style/Theme.Material.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/TargetActionBar</item>
        <item name="android:colorPrimary">@color/actionbar_color</item>
        <!--   darker variant for the status bar and contextual app bars -->
        <item name="android:colorPrimaryDark">@color/actionbar_color</item>
        <!--   theme UI controls like checkboxes and text fields -->
        <item name="android:colorAccent">@color/actionbar_color</item>
    </style>
    <style name="TargetActionBar"
        parent="@android:style/Widget.Holo.Light.ActionBar.Solid">
        <item name="android:background">@color/actionbar_color</item>
    </style>
</resources>
